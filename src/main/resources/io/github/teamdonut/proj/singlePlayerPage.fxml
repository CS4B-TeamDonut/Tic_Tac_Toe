<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import io.github.teamdonut.proj.utils.RestrictiveTextField?>

<BorderPane fx:id="singlePlayerPage" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <ImageView fx:id="backButton" fitHeight="89.0" fitWidth="97.0" onMouseClicked="#onBackButtonClick" onMouseEntered="#onBackButtonEnter" onMouseExited="#onBackButtonExit" preserveRatio="true" BorderPane.alignment="TOP_LEFT">
            <Image url="@images/common/back_arrow.png" />
        </ImageView>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Label fx:id="title" alignment="TOP_CENTER" prefHeight="17.0" prefWidth="33.0" text="Label" textAlignment="CENTER" translateY="-80.0" />
            <RestrictiveTextField fx:id="nameEntry" alignment="CENTER" onKeyPressed="#onNameEntered" translateY="-40.0" />
            <ToolBar fx:id="difficultyLevelBar" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" prefHeight="40.0" prefWidth="150.0" translateY="-10.0">
                <RadioButton fx:id="easyMode" mnemonicParsing="false" text="RadioButton" />
                <RadioButton fx:id="hardMode" mnemonicParsing="false" text="RadioButton" translateX="20.0" />
            </ToolBar>
            <Label fx:id="difficultyLevelTitle" text="Label" translateX="-150.0" translateY="-45.0" />
            <Label fx:id="tokenSelectorTitle" text="Label" translateX="-150.0" translateY="5.0" />
            <ToolBar fx:id="tokenBar" maxHeight="40.0" maxWidth="150.0" minHeight="40.0" minWidth="150.0" prefHeight="40.0" prefWidth="150.0" translateY="-30.0">
                <RadioButton fx:id="tokenX" mnemonicParsing="false" text="RadioButton" />
                <RadioButton fx:id="tokenO" mnemonicParsing="false" text="RadioButton" translateX="45.0" />
            </ToolBar>
            <Button fx:id="entryButton" alignment="BASELINE_CENTER" mnemonicParsing="false" onAction="#onButtonClicked" text="Button" translateY="20.0" />
        </VBox>
    </center>
</BorderPane>